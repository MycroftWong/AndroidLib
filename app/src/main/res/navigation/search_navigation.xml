<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/search_navigation"
    app:startDestination="@id/navigation_history_search">

    <fragment
        android:id="@+id/navigation_history_search"
        android:name="wang.mycroft.lib.sample.ui.fragment.HistorySearchFragment"
        android:label="@string/history_search"
        tools:layout="@layout/fragment_history_search" >
        <action
            android:id="@+id/action_navigation_history_search_to_navigation_search_result"
            app:destination="@id/navigation_search_result" />
    </fragment>

    <fragment
        android:id="@+id/navigation_search_result"
        android:name="wang.mycroft.lib.sample.ui.fragment.SearchResultFragment"
        android:label="@string/search_result"
        tools:layout="@layout/vertical_refresh_recycler" />

</navigation>